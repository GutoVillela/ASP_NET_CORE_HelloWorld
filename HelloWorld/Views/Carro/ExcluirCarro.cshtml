@model HelloWorld.Models.Carro
@{
    ViewData["Title"] = "Excluir Carro";
}

<h1>Tem certeza disso?</h1>

<div class="row">
    <div class="col">

        <div class="card">
            <div class="card-header">
                <div class="card-title">Confirmar exclusão</div>
            </div>

            <div class="card-body">
                <form asp-action="ExcluirCarro">
                    <input type="hidden" asp-for="CarroId" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Index">Voltar</a>
            </div>
        </div>

    </div>
</div>

