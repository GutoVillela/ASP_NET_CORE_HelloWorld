@model HelloWorld.Models.Carro
@{
    ViewData["Title"] = "NovoCarro";
}

<h1>Novo Carro</h1>

<form asp-action="NovoCarro" method="post">

    <div class="form-group">
        <label asp-for="Marca" class="custom-control-label"></label>
        <input asp-for="Marca" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Modelo" class="custom-control-label"></label>
        <input asp-for="Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ano" class="custom-control-label"></label>
        <input asp-for="Ano" class="form-control" />
    </div>

    <input type="submit" value="Salvar" class="btn btn-primary" />


</form>

<a asp-action="Index" class="btn btn-link">Voltar</a>