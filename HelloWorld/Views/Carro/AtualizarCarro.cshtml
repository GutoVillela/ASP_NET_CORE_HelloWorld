@model HelloWorld.Models.Carro
@{
    ViewData["Title"] = "AtualizarCarro";
}

<h1>AtualizarCarro</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarCarro">
            <input type="hidden" asp-for="CarroId" />

            <div class="form-group">
                <label asp-for="Marca" class="custom-control-label"></label>
                <input asp-for="Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="custom-control-label"></label>
                <input asp-for="Modelo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="custom-control-label"></label>
                <input asp-for="Ano" class="form-control" />
            </div>

            <input type="submit" value="Atualizar" class="btn btn-info" />
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-link">Voltar</a>